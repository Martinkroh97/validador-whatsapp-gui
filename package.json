{
  "name": "validador-whatsapp-gui",
  "version": "1.0.0",
  "description": "Validador de WhatsApp con interfaz gr√°fica",
  "main": "src/main.js",
  "author": "Validador WhatsApp",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win", 
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild",
    "clean": "rimraf dist node_modules/.cache"
  },
  "build": {
    "appId": "com.validador.whatsapp",
    "productName": "Validador WhatsApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/README.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!**/*.map",
      "!src/**/*.js.map"
    ],
    "extraResources": [
      {
        "from": "configs",
        "to": "configs",
        "filter": ["**/*.json"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "tu-usuario",
      "repo": "validador-whatsapp"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "googleapis": "^128.0.0",
    "whatsapp-web.js": "^1.23.0",
    "qrcode-terminal": "^0.12.0",
    "puppeteer": "^21.0.0"
  }
}