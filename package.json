{
  "name": "validador-whatsapp-gui",
  "version": "1.0.0",
  "description": "Validador de WhatsApp con interfaz gr√°fica",
  "main": "src/main.js",
  "author": "Validador WhatsApp",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron . --dev",
    "dev:win": "electron . --dev",
    "build": "npm run build:mac:intel && npm run build:mac:apple",
    "build:mac": "npm run build:mac:intel && npm run build:mac:apple",
    "build:mac:intel": "electron-builder --mac --x64",
    "build:mac:apple": "electron-builder --mac --arm64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild",
    "clean": "rimraf dist node_modules/.cache"
  },
  "build": {
    "appId": "com.validador.whatsapp",
    "productName": "Validador WhatsApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/README.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!**/*.map",
      "!src/**/*.js.map"
    ],
    "asarUnpack": [
      "node_modules/puppeteer/**/*",
      "node_modules/puppeteer-core/**/*",
      "node_modules/whatsapp-web.js/**/*"
    ],
    "extraResources": [
      {
        "from": "configs",
        "to": "configs",
        "filter": [
          "**/*.json"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "Martinkroh97",
      "repo": "validador-whatsapp-gui"
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "googleapis": "^128.0.0",
    "puppeteer": "^21.0.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "github:BenyFilho/whatsapp-web.js#fix_event_ready"
  }
}
